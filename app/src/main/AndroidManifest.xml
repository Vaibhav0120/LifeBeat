<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Add Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LifeBeat"
        tools:targetApi="31">
        <activity
            android:name=".ui.ShopActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DocListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DetailActivity"
            android:exported="false" /> <!-- RegisterActivity -->
        <activity
            android:name=".authPages.RegisterActivity"
            android:exported="false" /> <!-- LoginActivity -->
        <activity
            android:name=".authPages.LoginActivity"
            android:exported="false" /> <!-- LandingPage - Main entry point for app -->
        <activity
            android:name=".authPages.LandingPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>