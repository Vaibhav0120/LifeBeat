<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_marginBottom="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lavender"
            android:text="Monitoring Symptoms Of \nLung Cancer"
            android:layout_marginBottom="16dp" />

        <!-- Stage 1 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:background="@drawable/tips_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Early-Stage Lung Cancer"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="215dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="22dp"
                        android:layout_weight="0.5"
                        android:text="(0-3 weeks) Early symptoms may not be present, but regular screening can help."
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageViewStage1"
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/xray_first" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Read More"
                    android:id="@+id/buttonStage1"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/lavender"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stage 2 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:background="@drawable/tips_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Advanced Lung Cancer"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="215dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="22dp"
                        android:layout_weight="0.5"
                        android:text="(4-6 weeks) Symptoms may include a persistent cough, weight loss, and fatigue."
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageViewStage2"
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/xray_second" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Read More"
                    android:id="@+id/buttonStage2"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/lavender"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stage 3 Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:background="@drawable/tips_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Advanced Lung Cancer"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="215dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="22dp"
                        android:layout_weight="0.5"
                        android:text="(7-9 weeks) Symptoms may include severe coughing, chest pain, and difficulty breathing."
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageViewStage3"
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="150dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/xray_third" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Read More"
                    android:id="@+id/buttonStage3"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/lavender"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
