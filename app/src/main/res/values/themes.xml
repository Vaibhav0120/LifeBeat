<resources>
    <!-- Base application theme without an ActionBar -->
    <style name="Theme.LifeBeat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Ensure the title bar is fully removed -->
        <item name="windowNoTitle">true</item> <!-- This will ensure no title bar -->
        <item name="windowActionBar">false</item> <!-- Disable the action bar -->

        <!-- Define your color scheme -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/darkPurple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Optional: Status bar color if needed -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
